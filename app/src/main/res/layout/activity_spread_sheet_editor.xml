<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <CalendarView
        android:id="@+id/idcalender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/iddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idcalender"
        android:text="日付を選択してください"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"/>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/list1"
        android:layout_below="@id/iddate"
        android:layout_marginLeft="40dp">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="50dp"
        android:id="@+id/tv1"
        android:text="国語"
        />
    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/et1"
        android:layout_below="@id/tv1"/>

    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et1"
        android:text="@string/returnDefault"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/list2"
        android:layout_below="@id/list1"
        android:layout_marginLeft="40dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="50dp"
            android:id="@+id/tv2"
            android:text="国語"
            />
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/et2"
            android:layout_below="@id/tv1"/>

        <Button
            android:id="@+id/bt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et2"
            android:text="@string/returnDefault"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/list2"
        android:layout_marginLeft="40dp"
        android:id="@+id/list3">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="50dp"
            android:id="@+id/tv3"
            android:text="国語"
            />
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/et3"
            android:layout_below="@id/tv3"/>

        <Button
            android:id="@+id/bt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et3"
            android:text="@string/returnDefault"/>
    </LinearLayout>
    <Button
        android:id="@+id/btSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list3"
        android:layout_centerHorizontal="true"
        android:text="Submit"/>
    <Button
        android:id="@+id/btSignout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btSubmit"
        android:layout_centerHorizontal="true"
        android:text="SignOut"/>


</RelativeLayout>